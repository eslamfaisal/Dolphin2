<?xml version="1.0" encoding="utf-8"?>
<com.rafakob.drawme.DrawMeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawme="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    drawme:dm_backColor="@color/colorPrimary"
    drawme:dm_backColorDisabled="@color/grey"
    drawme:dm_backColorPressed="@color/green"
    drawme:dm_radius="10dp">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/from_tim"
        android:layout_marginTop="-15dp"
        android:visibility="visible"
        fresco:backgroundImage="@color/gray"
        fresco:placeholderImage="@drawable/ic_dummy_user"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImage="@drawable/ic_refresh_black_24dp"
        fresco:roundAsCircle="false"
        fresco:roundedCornerRadius="@dimen/_8sdp"
        fresco:roundingBorderColor="@android:color/white"
        fresco:roundingBorderWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_toEndOf="@id/profile_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/specialization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كهرباء"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرايا . الرياض"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاثنين 15/9/2018"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="من 9ص - 12م"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/from_tim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="تقييم جيد"
        android:textColor="@color/orange"
        android:textSize="18dp" />


</com.rafakob.drawme.DrawMeRelativeLayout>
