<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile_bg"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="15.0dip">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65.0dip">

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8.0dip"
                    app:cardElevation="5.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40.0dip"
                            android:background="@drawable/tv_prof" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60.0dip"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5.0dip"
                                android:orientation="horizontal"
                                android:weightSum="2.0">

                                <TextView
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:text="@string/name"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12.0sp" />

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="35.0dip"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/ll_prof_bg"
                                    android:orientation="horizontal"
                                    android:weightSum="1.0">

                                    <TextView
                                        android:id="@+id/name"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="35.0dip"
                                        android:layout_gravity="center_vertical"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:textSize="13.0sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5.0dip"
                                android:orientation="horizontal"
                                android:weightSum="2.0">

                                <TextView
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:text="@string/phone"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12.0sp" />

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="35.0dip"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/ll_prof_bg"
                                    android:orientation="horizontal"
                                    android:weightSum="1.0">

                                    <TextView
                                        android:id="@+id/phone"
                                        android:layout_height="35.0dip"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:layout_width="match_parent"
                                        android:textSize="13.0sp" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5.0dip"
                                android:orientation="horizontal"
                                android:weightSum="2.0">

                                <TextView
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:text="@string/email"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12.0sp" />

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="35.0dip"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/ll_prof_bg"
                                    android:orientation="horizontal"
                                    android:weightSum="1.0">

                                    <TextView
                                        android:id="@+id/email"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="35.0dip"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center"
                                        android:textSize="13.0sp" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_job"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5.0dip"
                                android:orientation="horizontal"
                                android:weightSum="2.0">

                                <TextView
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:text="@string/specialization"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12.0sp" />

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="35.0dip"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/ll_prof_bg"
                                    android:orientation="horizontal"
                                    android:weightSum="1.0">

                                    <TextView
                                        android:id="@+id/job"
                                        android:layout_width="0.0dip"
                                        android:layout_height="35.0dip"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="0.85"
                                        android:gravity="center"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="13.0sp" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout

                                android:id="@+id/ll_address"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10.0dip"
                                android:orientation="horizontal"
                                android:weightSum="2.0">

                                <TextView
                                    android:layout_width="0.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:text="@string/address"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12.0sp" />

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="35.0dip"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/ll_prof_bg"
                                    android:orientation="horizontal"
                                    android:weightSum="1.0">

                                    <TextView
                                        android:id="@+id/address"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="35.0dip"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center"
                                        android:textSize="13.0sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo"
                    fresco:backgroundImage="@color/gray"
                    fresco:placeholderImage="@drawable/ic_dummy_user"
                    fresco:progressBarAutoRotateInterval="1000"
                    fresco:progressBarImage="@drawable/ic_refresh_black_24dp"
                    fresco:roundAsCircle="true"
                    fresco:roundingBorderColor="@android:color/white"
                    fresco:roundingBorderWidth="2dp" />

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/update_profile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</ScrollView>